Bootstrap: docker
From: ubuntu:22.04

%post
    # add-apt-repository ppa:savoury1/ffmpeg4
    # add-apt-repository ppa:savoury1/blender
    # apt-get install blender -y

    apt-get update
    apt-get upgrade -y
    apt-get dist-upgrade -y
    apt-get install wget xz-utils -y
    apt-get install libgl1-mesa-glx libxi6 libxrender1 libxrandr2 libfreetype6 libfontconfig1 -y


    wget -O blender.tar.xz https://download.blender.org/release/Blender3.6/blender-3.6.4-linux-x64.tar.xz

    tar -xvf blender.tar.xz
    mv blender-3.6.4-linux-x64 /opt/blender

%environment
    export PATH=$PATH:/opt/blender

%runscript
    /opt/blender/blender "$@"
