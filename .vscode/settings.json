{
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=F401,E402"  // "--ignore=E402,F841,F401,E302,E305",
    ],
    "autopep8.args": ["--max-line-length=200", "--experimental", "--ignore", "W292"],
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "python.formatting.autopep8Args": ["--max-line-length", "200", "--experimental", "--ignore", "W292"],
    "notebook.formatOnSave.enabled": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": false
    },
    "editor.fontSize": 13,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [120],
    "errorLens.enabled": true,
    "errorLens.messageBackgroundMode": "message",
    "errorLens.excludeBySource": ["cSpell"],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#37373d",
        "activityBar.activeBackground": "#7a9ac8",
        "activityBar.background": "#7a9ac8",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#ecd2dd",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#7a9ac8",
        "statusBar.background": "#567eb9",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#7a9ac8",
        "statusBarItem.remoteBackground": "#567eb9",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#567eb9",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#567eb999",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "autoDocstring.docstringFormat": "google",
    "cSpell.language": "en,de-de",
    "peacock.color": "#567eb9",
    "prettier.requireConfig": true,
}